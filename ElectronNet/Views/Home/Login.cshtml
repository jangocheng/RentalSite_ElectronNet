<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>登陆</title>
    <link href="~/common/login.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <section id="content">
            <form asp-controller="Home" asp-action="Login" method="post">
                <h1>Login Form</h1>
                <div>
                    <input type="text" placeholder="手机号码" required id="phoneNum" />
                </div>
                <div>
                    <input type="password" placeholder="密码" required id="password" />
                </div>
                <div style="text-align:center;">
                    <input type="button" value="登陆" onclick="login()" />
                </div>
            </form>
            <div class="button">
                <a href="#" style="cursor:auto;">租客后台管理</a>
            </div>
        </section>
    </div>
    <script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
    <script>if (typeof module === 'object') { window.jQuery = window.$ = module.exports; };</script>
    <script type="text/javascript">
        function login() {
            let phoneNum = $("#phoneNum").val();
            let regex = /^1(3|4|5|7|8)\d{9}$/;
            console.log(phoneNum);
            console.log($("#password").val());
            console.log(regex.test(phoneNum))
            if (!regex.test(phoneNum)) {
                alert("请输入正确的电话号码！")
                return false;
            }

            let pwd = $("#password").val();
            if (pwd.length < 6 || pwd.length > 16) {
                alert("密码长度为6至16位");
                return false;
            }

            $.ajax({
                url: "/Home/Login",
                type: "post",
                data: { phoneNum: phoneNum, password: pwd },
                success: function (res) {
                    if (res.status != 200) {
                        alert(res.message);
                    }
                    else {
                        window.location = "/Home/Index";
                    }
                },
                error: function () {
                    alert("服务端错误！");
                }
            });
        }
    </script>
</body>
</html>
