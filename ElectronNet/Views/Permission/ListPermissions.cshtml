@model ResultModel
@{
    ViewData["Title"] = "权限列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<span class="layui-breadcrumb">
    <i class="layui-icon">&#xe68e;</i>
    <a href="">首页</a>
    <a href="">权限管理</a>
    <a>
        <cite>权限项管理</cite>
    </a>
</span>

<section class="layui-larry-box">
    <div class="layui-tab">
        <blockquote class="layui-elem-quote news_search">
            <div class="layui-inline">
                <div class="layui-input-inline">
                    <input placeholder="请输入权限名称" class="layui-input search_input" type="text">
                </div>
                <a class="layui-btn search_btn"><i class="layui-icon">&#xe615;</i>查询</a>
            </div>
            <div class="layui-inline">
                <a class="layui-btn layui-btn-normal newsAdd_btn"><i class="layui-icon">&#xe654;</i>添加权限</a>
            </div>
            <div class="layui-inline">
                <a class="layui-btn layui-btn-danger batchDel"><i class="layui-icon">&#xe640;</i>批量删除</a>
            </div>
        </blockquote>
        <div class="ayui-tab-content">
            <table class="layui-table" id="dataTable"></table>
        </div>
    </div>
</section>

<script type="text/html" id="perBar">
    <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="detail">查看</a>
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>

