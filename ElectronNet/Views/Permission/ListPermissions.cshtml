
@{
    ViewData["Title"] = "权限列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<span class="layui-breadcrumb">
    <i class="layui-icon">&#xe68e;</i>
    <a href="">首页</a>
    <a href="">权限管理</a>
    <a>
        <cite>权限项管理</cite>
    </a>
</span>
<div class="layui-container">
    <div class="layui-row">
        <div class="layui-col-md12" style="margin-top:20px;"></div>
        <div class="layui-col-md12" style="text-align: center;">
            <div class="layui-form-item">
                <div class="layui-inline">
                    <button class="layui-btn layui-btn-radius" id="perSearchBtn">查询</button>
                    <div class="layui-input-inline" style="width: 250px;">
                        <input type="text" placeholder="请输入权限名称" class="layui-input" id="perName" style="width:250px" />
                    </div>
                </div>
            </div>
            <table class="layui-table" lay-data="{height: 'full-200', cellMinWidth: 80, page: true, limit:30, url:'/demo/table/user/'}">
                <thead>
                    <tr>
                        <th lay-data="{type:'checkbox'}">id</th>
                        <th lay-data="{field:'name', width:100}">名称</th>
                        <th lay-data="{field:'description', width:100}">描述</th>
                        <th lay-data="{fixed: 'right', width:178, align:'center', toolbar: '#perBar'}"></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<script type="text/html" id="perBar">
    <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="detail">查看</a>
